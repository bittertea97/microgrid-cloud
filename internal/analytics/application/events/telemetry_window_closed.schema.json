{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "analytics.telemetry_window.closed.v1",
  "type": "object",
  "required": [
    "event_id",
    "event_type",
    "event_version",
    "occurred_at",
    "produced_at",
    "tenant_id",
    "aggregate_id",
    "correlation_id",
    "causation_id",
    "is_replay",
    "replay_id",
    "payload"
  ],
  "properties": {
    "event_id": { "type": "string" },
    "event_type": { "type": "string", "const": "analytics.telemetry_window.closed" },
    "event_version": { "type": "integer", "const": 1 },
    "occurred_at": { "type": "string", "format": "date-time" },
    "produced_at": { "type": "string", "format": "date-time" },
    "tenant_id": { "type": "string" },
    "aggregate_id": { "type": "string" },
    "correlation_id": { "type": "string" },
    "causation_id": { "type": "string" },
    "is_replay": { "type": "boolean" },
    "replay_id": { "type": "string" },
    "payload": {
      "type": "object",
      "required": ["window_start", "window_end", "source", "quality"],
      "properties": {
        "window_start": { "type": "string", "format": "date-time" },
        "window_end": { "type": "string", "format": "date-time" },
        "source": { "type": "string" },
        "quality": { "type": "string", "enum": ["complete", "partial", "late"] },
        "checksum": { "type": "string" }
      },
      "additionalProperties": false
    },
    "meta": { "type": "object", "additionalProperties": true }
  },
  "additionalProperties": false
}